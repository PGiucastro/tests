{
  "name": "terms-nodes-generator",
  "version": "1.0.0",
  "scripts": {
    "demo": "serve --port",
    "sass": "node-sass css/main.scss build/terms-nodes-generator-bundle.css",
    "sass-watch": "node-sass -w css/main.scss build/terms-nodes-generator-bundle.css",
    "build-4-demo": "browserify -t brfs src/main-4-demo.js -o build/terms-nodes-generator-bundle-4-demo.js",    
    "build-4-demo-watch": "watchify -t brfs src/main-4-demo.js -o build/terms-nodes-generator-bundle-4-demo.js -v",    
    "build": "browserify -t brfs src/main.js -o build/terms-nodes-generator-bundle.js",
    "test": "karma start --single-run",
    "dist": "npm run build && npm run sass"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^14.4.0",
    "browserify-fs": "^1.0.0",
    "jasmine": "^2.6.0",
    "karma": "^1.7.0",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-verbose-reporter": "0.0.6",
    "node-sass": "^4.5.3",
    "serve": "^6.0.6",
    "watchify": "^3.9.0"
  }
}
